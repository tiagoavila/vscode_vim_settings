{
    "workbench.iconTheme": "vscode-icons",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorCustomizations": {
        "terminal.background": "#1D2021",
        "terminal.foreground": "#f1f1f1",
        "statusBar.noFolderBackground": "#000000",
        "statusBar.debuggingBackground": "#000000",
        "statusBar.debuggingForeground": "#434C5E"
    },
    "task.problemMatchers.neverPrompt": false,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "workbench.colorTheme": "Dracula Theme",
    "terminal.explorerKind": "external",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "editor.fontSize": 16,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "editor.accessibilitySupport": "off",
    "editor.minimap.enabled": false,
    "git.openRepositoryInParentFolders": "never",
    "emmet.includeLanguages": {
        "phoenix-heex": "html"
    },
    "[phoenix-heex]": {
        "editor.defaultFormatter": "JakeBecker.elixir-ls"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDragAndDrop": false,
    "editor.cursorSurroundingLines": 8,
    "workbench.editor.openPositioning": "last",
    "git.confirmSync": false,
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.defaultProfile.linux": "wsl",
    "git.enableSmartCommit": true,
    "[elixir]": {
        "editor.defaultFormatter": "JakeBecker.elixir-ls"
    },
    "github.copilot.nextEditSuggestions.enabled": true,
    "terminal.integrated.gpuAcceleration": "off",
    "editor.inlineSuggest.showToolbar": "always",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false
    },
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
    "vscode-neovim.neovimInitVimPaths.win32": "C:\\Users\\tiago\\AppData\\Local\\nvim\\init.lua",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.compositeKeys": {
        "jj": {
            "command": "vscode-neovim.escape",
        },
        "jk": {
            // Use lua to execute any logic
            "command": "vscode-neovim.lua",
            "args": [
                [
                    "local code = require('vscode')",
                    "code.action('vscode-neovim.escape')",
                    "code.action('workbench.action.files.save')",
                ],
            ],
        },
        "gb": {
            "command": "vscode-neovim.lua",
            "args": [
                [
                    "local code = require('vscode')",
                    "code.action('editor.debug.action.toggleBreakpoint')",
                ],
            ],
        }
    },
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",
    "vscode-neovim.ctrlKeysForNormalMode": [
        "a",
        "b",
        "c",
        "d",
        "e",
        "f",
        "h",
        "j",
        "k",
        "l",
        "m",
        "o",
        "r",
        "t",
        "u",
        "v",
        "w",
        "x",
        "y",
        "z",
        "/",
        "]",
        "right",
        "left",
        "up",
        "down",
        "backspace",
        "delete"
    ],
    "editor.lineNumbers": "relative",
    "vscode-neovim.highlightGroups.highlights": {

        "IncSearch": {
            "backgroundColor": "theme.editor.findMatchBackground"
        },
        "CurSearch": {
            "backgroundColor": "theme.editor.findMatchBackground"
        },
        "Search": {
            "backgroundColor": "theme.editor.findMatchHighlightBackground"
        },
        "Substitute": {
            "backgroundColor": "theme.editor.foreground",
            "color": "theme.editor.background"
        },
        "Visual": {
            "backgroundColor": "theme.editor.findMatchBackground",
            "color": "theme.editor.background"
        }
    },
}
